<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:eme:users:request:get-user-request:1-0-0">
    <fields>
      <field name="email" type="string" format="email"/>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:request:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:get-node-request:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Eme\Schemas\Users\Request</namespace>
    </php-options>
  </schema>
</pbj-schema>
