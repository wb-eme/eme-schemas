<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:eme:solicits:event:note-added-to-submission:1-0-0">
    <fields>
      <field name="submission_id" type="time-uuid" required="true"/>
      <field name="note" type="text"/>
      <field name="hashtags_added" type="string" format="hashtag" rule="set"/>
      <field name="hashtags_removed" type="string" format="hashtag" rule="set"/>
    </fields>

    <mixins>
      <curie-major>eme:accounts:mixin:account-ref:v1</curie-major>
      <curie-major>gdbots:pbjx:mixin:event:v1</curie-major>
      <curie-major>gdbots:pbjx:mixin:indexed:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Eme\Schemas\Solicits\Event</namespace>
    </php-options>
  </schema>
</pbj-schema>
