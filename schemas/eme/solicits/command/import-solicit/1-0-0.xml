<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:eme:solicits:command:import-solicit:1-0-0">
    <fields>
      <field name="solicit_id" type="identifier">
        <php-options>
          <classname>Eme\Schemas\Solicits\SolicitId</classname>
        </php-options>
      </field>
      <field name="title" type="string"/>
      <field name="description" type="text">
        <description>
          A short description (a few sentences) about this solicit.  This field should
          not have html as it is used in metadata.
        </description>
      </field>
      <field name="hashtags" type="string" format="hashtag" rule="set"/>
      <field name="tags" type="string" pattern="^[\w\/\.:-]+$" rule="map">
        <description>
          Tags are name value pairs used to categorize solicits or track references in
          external or legacy systems. The tags names should be consistent and descriptive,
          i.e. bots_request_id:100
        </description>
      </field>
      <field name="story_enabled" type="boolean">
        <default>true</default>
      </field>
      <field name="story_label" type="string"/>
      <field name="is_active" type="boolean"/>
      <field name="created_at" type="microtime" use-type-default="false"/>
    </fields>

    <mixins>
      <curie-major>eme:accounts:mixin:account-ref:v1</curie-major>
      <curie-major>gdbots:pbjx:mixin:command:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Eme\Schemas\Solicits\Command</namespace>
    </php-options>
  </schema>
</pbj-schema>
