<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:eme:accounts:mixin:account-ref:1-0-0" mixin="true">
    <fields>
      <field name="account_id" type="identifier">
        <description>The EME account that this message is associated with.</description>
        <php-options>
          <imports>use Eme\Schemas\Accounts\AccountId;</imports>
          <class-name>AccountId::class</class-name>
        </php-options>
        <js-options>
          <imports>import AccountId from '@wbeme/schemas/eme/accounts/AccountId';</imports>
          <class-proto>AccountId</class-proto>
        </js-options>
      </field>
    </fields>
  </schema>
</pbj-schema>
