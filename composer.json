{
  "name": "eme/schemas",
  "homepage": "https://github.com/wb-eme/schemas",
  "description": "Schemas for all EME apps and components.",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=5.6",
    "gdbots/pbj": "~1.1",
    "gdbots/schemas": "dev-es as 1.0.0"
  },
  "require-dev": {
    "composer/composer": "1.0.*@dev",
    "phpunit/phpunit": "~4.3",
    "gdbots/pbjc": "~0.2"
  },
  "autoload": {
    "files": ["pbj-schemas.php"],
    "psr-0": {
      "": "src/php"
    }
  },
  "autoload-dev": {
    "files": ["pbj-schema-stores.php"],
    "psr-0": {
      "": "tests/php"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "@test"
    ],
    "post-package-install": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-uninstall": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "post-package-update": [
      "Gdbots\\Pbjc\\Composer\\ScriptHandler::writePbjSchemaStoresFile"
    ],
    "test": "vendor/bin/phpunit"
  }
}
